<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="버튼1"
            android:focusableInTouchMode="true"
            android:nextFocusForward="@+id/btn_3"
            android:nextFocusLeft="@+id/btn_3"
            android:nextFocusRight="@+id/btn_2"
            android:text="1">

            <requestFocus />

        </Button>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="버튼2"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/btn_1"
            android:nextFocusRight="@+id/btn_3"
            android:text="2">

            <requestFocus />

        </Button>

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="버튼3"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/btn_2"
            android:nextFocusRight="@id/btn_1"
            android:text="3">

            <requestFocus />

        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="버튼4"
        android:text="4">

    </Button>

</LinearLayout>
